<script>
  // Mobile flip card functionality for FAQ
  document.addEventListener('DOMContentLoaded', function() {
    const flipCards = document.querySelectorAll('.flip-card-container');
    
    flipCards.forEach(card => {
      let isFlipped = false;
      
      card.addEventListener('click', function(e) {
        // Only handle clicks on mobile/touch devices
        if (window.innerWidth <= 1024) {
          e.preventDefault();
          
          const flipCardInner = card.querySelector('.flip-card-inner') as HTMLElement;
          
          if (flipCardInner) {
            if (!isFlipped) {
              flipCardInner.style.transform = 'rotateY(180deg)';
              isFlipped = true;
            } else {
              flipCardInner.style.transform = 'rotateY(0deg)';
              isFlipped = false;
            }
          }
        }
      });
      
      // Handle keyboard navigation
      card.addEventListener('keydown', function(e) {
        const keyEvent = e as KeyboardEvent;
        if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
          keyEvent.preventDefault();
          (card as HTMLElement).click();
        }
      });
    });
  });
</script>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  
  .transform-style-preserve-3d {
    transform-style: preserve-3d;
  }
  
  .backface-hidden {
    backface-visibility: hidden;
  }
  
  .rotate-y-180 {
    transform: rotateY(180deg);
  }
</style>