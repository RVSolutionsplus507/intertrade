<section id="faq" class="relative py-20 bg-gradient-to-br from-slate-50 via-white to-blue-50 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-20 -right-40 w-80 h-80 bg-gradient-to-br from-carrot-orange/5 to-manhattan/3 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 -left-40 w-80 h-80 bg-gradient-to-br from-eastern-blue/5 to-spray/3 rounded-full blur-3xl"></div>
  
