    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center bg-eastern-blue/10 rounded-full px-6 py-2 mb-6">
        <svg class="w-5 h-5 text-eastern-blue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-eastern-blue font-gotham-medium text-sm uppercase tracking-wide">Preguntas Frecuentes</span>
      </div>
      
      <h2 class="font-gotham-bold text-4xl md:text-5xl text-gray-900 mb-6">
        Preguntas <span class="text-transparent bg-clip-text bg-gradient-to-r from-carrot-orange to-manhattan">Frecuentes</span>
      </h2>
      
      <div class="mx-auto w-20 h-1 bg-gradient-to-r from-carrot-orange to-manhattan rounded-full mb-8"></div>
      
      <p class="font-gotham text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Resolvemos las dudas más comunes sobre nuestros servicios y procesos comerciales
      </p>
    </div>
    
    <!-- FAQ Flip Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {faqs.map((faq) => (
        <div class="group perspective-1000 cursor-pointer flip-card-container" tabindex="0">
          <div class="flip-card-inner relative w-full h-64 transform-style-preserve-3d transition-transform duration-700 group-hover:rotate-y-180 group-focus:rotate-y-180 group-active:rotate-y-180">
            
            <!-- Front Side (Question) -->
            <div class="absolute inset-0 w-full h-full backface-hidden">
              <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-6 shadow-xl border border-white/20 h-full flex flex-col justify-between hover:shadow-2xl transition-all duration-300">
                <!-- Question Number -->
                <div class="flex justify-between items-start mb-4">
                  <div class="w-10 h-10 bg-gradient-to-br from-carrot-orange to-manhattan rounded-xl flex items-center justify-center shadow-lg">
                    <span class="font-gotham-bold text-white text-lg">{faq.id}</span>
                  </div>
                  <div class="w-8 h-8 bg-eastern-blue/10 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-eastern-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                </div>
                
