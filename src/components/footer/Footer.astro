---
import companyData from '../../data/company.json';
import ContactForm from './ContactForm.astro';
import LinkedInPost from './LinkedInPost.astro';
import { fetchLinkedInPostSafe } from '../../services/linkedin.js';

// Fetch LinkedIn post on server-side
type LinkedInPostType = {
  title: string;
  excerpt: string;
  url: string;
  publishedAt: string;
  imageUrl?: string;
  author: { name: string; profileUrl: string; };
};

let linkedinPost: LinkedInPostType | undefined = undefined;

try {
  const result = await fetchLinkedInPostSafe();
  if (result && typeof result === 'object' && 'title' in result) {
    linkedinPost = result as LinkedInPostType;
  }
} catch (error: any) {
  console.log('LinkedIn API not available:', error?.message || 'Unknown error');
}
---

<footer id="footer" class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">
      
      <!-- Company Info & Contact -->
      <div class="lg:col-span-1">
        <!-- Logo -->
        <div class="flex items-center justify-center lg:justify-start space-x-3 mb-6">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-carrot-orange/20 to-eastern-blue/20 rounded-xl blur-lg"></div>
            <img 
              src="/Logo.webp" 
              alt={companyData.name}
              class="relative h-20 sm:h-24 lg:h-28 w-auto drop-shadow-xl"
            />
          </div>
        </div>
        
        <!-- Company Description -->
        <div class="mb-6">
          <p class="font-gotham text-gray-300 leading-relaxed">
            {companyData.description}
          </p>
        </div>
        
        <!-- Email Contact -->
        <div class="mb-6">
          <h4 class="font-gotham-bold text-lg text-white mb-3 flex items-center">
            <span class="w-1.5 h-6 bg-gradient-to-b from-carrot-orange to-eastern-blue rounded-full mr-2"></span>
            Contacto
          </h4>
          <div class="bg-white/5 backdrop-blur-sm rounded-lg p-3 border border-white/10 transition-all duration-300 hover:border-carrot-orange/30 active:border-carrot-orange/50 active:bg-white/10">
            <button 
              onclick="openEmailClient()" 
              class="font-gotham text-carrot-orange transition-colors duration-300 flex items-center space-x-2 group w-full text-left hover:text-eastern-blue active:text-eastern-blue active:scale-95"
            >
              <div class="w-8 h-8 bg-gradient-to-br from-carrot-orange to-eastern-blue rounded-lg flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-active:scale-95">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <span class="text-sm sm:text-base">Enviar correo electrónico</span>
              <svg class="w-4 h-4 ml-auto transition-transform duration-300 group-hover:translate-x-1 group-active:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- LinkedIn Post Section -->
        <LinkedInPost post={linkedinPost || undefined} />
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <ContactForm />
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-700 mt-8 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Copyright -->
        <div class="text-center md:text-left">
          <p class="font-gotham text-gray-400 text-sm">
            © {new Date().getFullYear()} {companyData.name}. Todos los derechos reservados.
          </p>
        </div>

        <!-- Developer Credit -->
        <div class="text-center md:text-right">
          <p class="font-gotham text-gray-400 text-sm">
            Desarrollado por 
            <a 
              href="https://rvsolutions.plus" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-carrot-orange hover:text-eastern-blue transition-colors duration-300 font-gotham-medium"
            >
              RVSolutions+
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Función segura para abrir cliente de correo
  function openEmailClient() {
    // Email codificado para mayor seguridad
    const emailParts = ['info', '@', 'intertrade', 'solutions', '.com'];
    const email = emailParts.join('');
    
    // Crear enlace mailto dinámicamente
    const mailtoLink = `mailto:${email}?subject=Consulta desde sitio web&body=Hola, me gustaría obtener más información sobre sus servicios.`;
    
    // Abrir cliente de correo del usuario
    window.location.href = mailtoLink;
  }
</script>
      