---
import companyData from '../../data/company.json';
import ContactForm from './ContactForm.astro';
import LinkedInPost from './LinkedInPost.astro';
import { fetchLinkedInPostSafe } from '../../services/linkedin.js';

// Fetch LinkedIn post on server-side
type LinkedInPostType = {
  title: string;
  excerpt: string;
  url: string;
  publishedAt: string;
  imageUrl?: string;
  author: { name: string; profileUrl: string; };
};

let linkedinPost: LinkedInPostType | undefined = undefined;

try {
  const result = await fetchLinkedInPostSafe();
  if (result && typeof result === 'object' && 'title' in result) {
    linkedinPost = result as LinkedInPostType;
  }
} catch (error: any) {
  console.log('LinkedIn API not available:', error?.message || 'Unknown error');
}
---

<footer id="footer" class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-10 items-start">
      
      <!-- Company Info & Logo -->
      <div class="lg:col-span-2">
        <!-- Logo Section -->
        <div class="flex items-center justify-center lg:justify-start mb-8">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-carrot-orange/20 to-eastern-blue/20 rounded-xl blur-lg"></div>
            <img 
              src="/Logo.webp" 
              alt={companyData.name}
              class="relative h-16 sm:h-18 lg:h-20 w-auto drop-shadow-xl"
            />
          </div>
        </div>

        <!-- Company Description -->
        <div class="mb-8">
          <p class="font-gotham text-gray-300 leading-relaxed">
            {companyData.description}
          </p>
        </div>

        <!-- LinkedIn Post Section -->
        <LinkedInPost post={linkedinPost || undefined} />
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <ContactForm />
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-700 mt-8 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Copyright -->
        <div class="text-center md:text-left">
          <p class="font-gotham text-gray-400 text-sm">
            © {new Date().getFullYear()} {companyData.name}. Todos los derechos reservados.
          </p>
        </div>

        <!-- Developer Credit -->
        <div class="text-center md:text-right">
          <p class="font-gotham text-gray-400 text-sm">
            Desarrollado por 
            <a 
              href="https://rvsolutions.plus" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-carrot-orange hover:text-eastern-blue transition-colors duration-300 font-gotham-medium"
            >
              RVSolutions+
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Función segura para abrir cliente de correo
  function openEmailClient() {
    // Email codificado para mayor seguridad
    const emailParts = ['info', '@', 'intertrade', 'solutions', '.com'];
    const email = emailParts.join('');
    
    // Crear enlace mailto dinámicamente
    const mailtoLink = `mailto:${email}?subject=Consulta desde sitio web&body=Hola, me gustaría obtener más información sobre sus servicios.`;
    
    // Abrir cliente de correo del usuario
    window.location.href = mailtoLink;
  }
</script>
      