---
interface Props {
  post?: {
    title: string;
    excerpt: string;
    url: string;
    publishedAt: string;
    imageUrl?: string;
    author: {
      name: string;
      profileUrl: string;
    };
  };
}

const { post } = Astro.props;

// Fallback data si no hay post disponible
const fallbackPost = {
  title: "Innovaciones en la Cadena de Suministro 2024",
  excerpt: "Descubre las últimas tendencias en logística y tecnología que están transformando el comercio internacional...",
  url: "https://www.linkedin.com/company/intertradesolutions",
  publishedAt: new Date().toLocaleDateString('es-ES'),
  imageUrl: "/assets/images/almacenamiento.webp",
  author: {
    name: "Intertrade Solutions",
    profileUrl: "https://www.linkedin.com/company/intertradesolutions"
  }
};

const displayPost = post || fallbackPost;
---

<!-- LinkedIn Post Section -->
<div class="mb-4">
  <h4 class="font-gotham-bold text-lg text-white mb-3 flex items-center">
    <span class="w-1.5 h-6 bg-gradient-to-b from-carrot-orange to-eastern-blue rounded-full mr-2"></span>
    Último Post de
    <div class="w-6 h-6 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center shadow-md ml-2">
      <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </div>
  </h4>
  
  <div class="group relative bg-gradient-to-br from-gray-800/90 to-gray-900/90 backdrop-blur-sm rounded-xl p-4 border border-gray-700/50 hover:border-carrot-orange/30 transition-all duration-300 hover:shadow-lg min-h-[200px] flex flex-col">
    
    <div class="flex-1">
      <!-- Content -->
      <div class="flex flex-col h-full">
        <h5 class="font-gotham-medium text-white text-sm mb-3">
          {displayPost.title}
        </h5>
        
        <!-- Post Image (if available) - Larger design -->
        {displayPost.imageUrl && (
          <div class="mb-4 rounded-lg overflow-hidden shadow-md flex justify-center">
            <img 
              src={displayPost.imageUrl} 
              alt={displayPost.title}
              class="w-full h-24 sm:h-28 object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
        )}
        
        <p class="font-gotham text-gray-300 text-sm mb-4 leading-relaxed flex-1">
          {displayPost.excerpt}
        </p>
      </div>
    </div>
    
    <!-- Post Metadata -->
    <div class="pt-1border-t border-white/10">
      <div class="flex items-center justify-between">
        <p class="font-gotham text-xs text-gray-400 flex items-center">
          <svg class="w-3 h-3 mr-1 text-carrot-orange" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          Publicado el {displayPost.publishedAt}
        </p>
        
        <a 
          href={displayPost.url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center font-gotham-medium text-carrot-orange hover:text-eastern-blue duration-300 text-xs group-hover:translate-x-1 transform transition-transform"
        >
          <span>Leer más</span>
          <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
    {post && (
          <p class="font-gotham text-xs text-green-400 flex items-center">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            En vivo desde LinkedIn
          </p>
        )}
      </div>
    </div>
  </div>
</div>
