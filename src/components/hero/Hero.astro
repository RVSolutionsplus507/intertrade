---
// Hero Component with Video Background
---

<section id="hero" class="relative h-screen min-h-[600px] max-h-[900px] sm:h-screen flex items-center justify-center overflow-hidden">
  <!-- Video Background -->
  <video 
    autoplay 
    muted 
    loop 
    playsinline
    preload="auto"
    class="absolute inset-0 w-full h-full object-cover object-[50%_60%] z-0"
  >
    <!-- Mobile video source -->
    <source src="/assets/videos/Heromobile.mp4" type="video/mp4" media="(max-width: 768px)">
    <!-- Desktop video source -->
    <source src="/assets/videos/introduccion.mp4" type="video/mp4" media="(min-width: 769px)">
    <!-- Fallback for older browsers -->
    <source src="/assets/videos/introduccion.mp4" type="video/mp4">
  </video>

  <!-- Content -->
  <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
    </div>
  </div>

  <!-- Scroll Indicator - Enhanced arrow at bottom -->
  <div class="absolute bottom-6 sm:bottom-8 md:bottom-12 left-1/2 transform -translate-x-1/2 z-30">
    <div class="flex flex-col items-center space-y-2">
      
      <!-- Enhanced arrow button with mobile-friendly interactions -->
      <a href="#nosotros" aria-label="Ir a la siguiente secciÃ³n" class="group relative flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-white/20 backdrop-blur-sm rounded-full text-white transition-all duration-500 shadow-xl transform animate-bounce hover:bg-white/30 hover:shadow-2xl hover:scale-110 active:scale-95">
        
        <!-- Arrow icon -->
        <svg class="w-5 h-5 sm:w-6 sm:h-6 relative z-10 transition-transform duration-300 drop-shadow-sm group-hover:scale-110 group-active:scale-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Custom radial gradient for better text contrast */
  .bg-gradient-radial {
    background: radial-gradient(ellipse at center, var(--tw-gradient-stops));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  /* Gradient animation for the main heading */
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradient 8s ease infinite;
  }
</style>
