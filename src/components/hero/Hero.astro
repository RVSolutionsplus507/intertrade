---
// Hero Component with Video Background
---

<section id="hero" class="relative h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-eastern-blue to-carrot-orange before:content-[''] before:absolute before:inset-x-0 before:top-0 before:h-20 before:bg-gradient-to-b before:from-black/35 before:to-transparent before:z-20 after:content-[''] after:absolute after:inset-x-0 after:bottom-0 after:h-16 md:after:h-24 after:bg-gradient-to-b after:from-transparent after:to-black/20 after:z-[25] mask-image-[linear-gradient(to_bottom,black_0%,black_85%,transparent_100%)]">
  <!-- Video Background -->
  <video 
    src="/assets/videos/introduccion.mp4"
    autoplay 
    muted 
    loop 
    playsinline
    preload="auto"
    class="absolute inset-0 w-full h-full object-cover object-center md:object-[50%_45%] z-0"
  >
    <source src="/assets/videos/introduccion.mp4" type="video/mp4">
  </video>
  
  

  <!-- Enhanced Video Overlay with gradient for better contrast -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/80 to-black/50 z-10"></div>
  
  <!-- Additional centered overlay for text area -->
  <div class="absolute inset-0 z-15">
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full max-w-5xl h-96 bg-gradient-radial from-black/30 via-black/20 to-transparent rounded-full blur-3xl"></div>
  </div>

  <!-- Content -->
  <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Main Slogan with enhanced text shadow -->
      <h1 class="font-gotham-bold text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl text-white mb-8 leading-snug tracking-normal md:tracking-tight drop-shadow-2xl">
        <span class="block drop-shadow-lg">Conectando mercados globales</span>
        <span class="block text-carrot-orange drop-shadow-lg">con soluciones estratégicas</span>
        <span class="block drop-shadow-lg">desde 2009</span>
      </h1>

      <!-- Single CTA Button -->
      <!-- <div class="flex justify-center mt-12">
        <a 
          href="#materiaprima" 
          class="group inline-flex items-center bg-carrot-orange hover:bg-eastern-blue text-white px-8 py-4 rounded-xl font-gotham-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl"
        >
          <span>Descubre Nuestras Soluciones</span>
          <svg class="ml-3 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div> -->
    </div>
  </div>

  <!-- Scroll Indicator - Enhanced arrow at bottom -->
  <div class="absolute bottom-8 md:bottom-1 left-1/2 transform -translate-x-1/2 z-30">
    <div class="flex flex-col items-center space-y-2">
      
      <!-- Enhanced arrow button -->
      <a href="#nosotros" aria-label="Ir a la siguiente sección" class="group relative flex items-center justify-center w-14 h-14 backdrop-blur-sm rounded-full text-white hover:from-carrot-orange hover:to-eastern-blue transition-all duration-500 shadow-xl hover:shadow-2xl hover:shadow-carrot-orange/25 transform hover:scale-110 animate-bounce">
        
        <!-- Arrow icon -->
        <svg class="w-6 h-6 relative z-10 group-hover:scale-110 transition-transform duration-300 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Custom radial gradient for better text contrast */
  .bg-gradient-radial {
    background: radial-gradient(ellipse at center, var(--tw-gradient-stops));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  /* Gradient animation for the main heading */
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradient 8s ease infinite;
  }
</style>
