---
import MateriaPrimaCarousel from './MateriaPrimaCarousel.astro';

// Lista de productos de materia prima
const productos = [
  'Colorantes y conservantes alimentarios',
  'Aditivos e ingredientes para bebidas',
  'Resinas plásticas y polímeros técnicos',
  'Solventes industriales y parafinas',
  'Catalizadores y compuestos químicos',
  'Palillos, paletas y mezcladores de madera',
  'Insumos para fósforos y cerillos',
  'Materias primas para empaques',
  'Subproductos especializados por industria'
];
---

<section id="materiaprima" class="py-20 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50 to-gray-100"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-carrot-orange/5 to-transparent rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-eastern-blue/5 to-transparent rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center bg-eastern-blue/10 rounded-full px-6 py-2 mb-6">
        <svg class="w-5 h-5 text-eastern-blue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
        </svg>
        <span class="text-eastern-blue font-gotham-medium text-sm uppercase tracking-wide">Materia Prima</span>
      </div>
      
      <h2 class="font-gotham-bold text-4xl md:text-5xl text-gray-900 mb-4">
        Productos <span class="text-transparent bg-clip-text bg-gradient-to-r from-carrot-orange to-manhattan">Especializados</span>
      </h2>
      <p class="font-gotham text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Suministramos materias primas de alta calidad para diversas industrias, garantizando estándares internacionales y entregas puntuales.
      </p>
      <div class="mx-auto w-20 h-1 bg-gradient-to-r from-carrot-orange to-manhattan rounded-full mt-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-stretch">
      <!-- Products List -->
      <div class="order-2 lg:order-1 flex">
        <div class="bg-white/90 backdrop-blur-sm rounded-3xl p-4 lg:p-6 shadow-xl border border-white/20 flex flex-col w-full">
          <div class="mb-4">
            <h3 class="font-gotham-bold text-lg lg:text-xl text-gray-900">Nuestros Productos</h3>
          </div>
          
          <div class="space-y-1">
            {productos.map((producto, index) => (
              <div class="flex items-center p-2 bg-gray-50/80 rounded-lg hover:bg-white/60 transition-all duration-300 group">
                <div class="w-6 h-6 bg-gradient-to-br from-eastern-blue to-spray rounded-lg flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300 flex-shrink-0">
                  <span class="font-gotham-bold text-white text-xs">{index + 1}</span>
                </div>
                <div class="flex-1">
                  <h4 class="font-gotham-medium text-sm lg:text-base text-gray-900 group-hover:text-eastern-blue transition-colors duration-300 leading-tight">{producto}</h4>
                </div>
              </div>
            ))}
          </div>
          
          <!-- Call to Action -->
          <div class="mt-4 lg:mt-6">
            <a 
              href="#footer" 
              class="group w-full bg-gradient-to-r from-carrot-orange via-manhattan to-carrot-orange text-white font-gotham-bold py-3 lg:py-4 px-4 lg:px-6 rounded-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 flex items-center justify-center space-x-2 lg:space-x-3 relative overflow-hidden text-sm lg:text-base"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-manhattan via-carrot-orange to-manhattan opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <svg class="w-4 h-4 lg:w-5 lg:h-5 relative z-10 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="relative z-10 group-hover:tracking-wide transition-all duration-300">Solicitar Cotización</span>
              <svg class="w-3 h-3 lg:w-4 lg:h-4 relative z-10 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Carousel Section -->
      <div class="order-1 lg:order-2">
        <MateriaPrimaCarousel />
      </div>
    </div>

</section>
