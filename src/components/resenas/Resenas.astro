---
import ResenasCarousel from './ResenasCarousel.astro';
---

<section id="resenas" class="py-20 relative overflow-hidden">
  <!-- Clean background -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-white"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-carrot-orange/10 to-transparent rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-tl from-eastern-blue/10 to-transparent rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center bg-eastern-blue/10 rounded-full px-6 py-2 mb-6">
        <svg class="w-5 h-5 text-eastern-blue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <span class="text-eastern-blue font-gotham-medium text-sm uppercase tracking-wide">Testimonios</span>
      </div>
      
      <h2 class="font-gotham-bold text-4xl md:text-5xl text-gray-900 mb-4">
        Lo que dicen nuestros<span class="text-transparent bg-clip-text bg-gradient-to-r from-carrot-orange to-manhattan"> clientes</span>
      </h2>
      <div class="mx-auto w-20 h-1 bg-gradient-to-r from-carrot-orange to-manhattan rounded-full mt-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Carousel Section -->
      <div class="order-2 lg:order-1">
        <ResenasCarousel />
      </div>
      
      <!-- Video Section -->
      <div class="order-1 lg:order-2">
        <div class="relative">
          <!-- Video Container -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl shadow-gray-900/20 border border-white/20 h-full">
            <video 
              class="w-full h-full object-cover"
              autoplay 
              muted 
              loop 
              playsinline
            >
              <source src="/assets/videos/contenedores.mp4" type="video/mp4">
              Tu navegador no soporta el elemento de video.
            </video>
          </div>
          
          <!-- Decorative elements around video (repositioned) -->
          <div class="absolute -top-6 -right-6 w-8 h-8 bg-carrot-orange rounded-full opacity-60"></div>
          <div class="absolute -bottom-6 -left-6 w-6 h-6 bg-eastern-blue rounded-full opacity-60"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom pattern background */
  .pattern-bg {
    background-image: 
      radial-gradient(circle at 25px 25px, rgba(241, 139, 33, 0.1) 2px, transparent 2px),
      radial-gradient(circle at 75px 75px, rgba(10, 139, 164, 0.1) 2px, transparent 2px);
    background-size: 100px 100px;
  }
</style>
