---
// Sectores component with modern cards and video
---

<section id="sectores" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center bg-eastern-blue/10 rounded-full px-6 py-2 mb-6">
        <svg class="w-5 h-5 text-eastern-blue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
        </svg>
        <span class="text-eastern-blue font-gotham-medium text-sm uppercase tracking-wide">Nuestros Sectores</span>
      </div>
      
      <h2 class="font-gotham-bold text-4xl md:text-5xl text-gray-900 mb-4">
        Industrias que<span class="text-transparent bg-clip-text bg-gradient-to-r from-carrot-orange to-manhattan"> Servimos</span>
      </h2>
      <div class="mx-auto w-20 h-1 bg-gradient-to-r from-carrot-orange to-manhattan rounded-full mt-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6 lg:gap-8">
        <!-- Alimentación y Bebidas -->
        <div class="flip-card group h-64 perspective-1000">
          <div class="flip-card-inner relative w-full h-full transition-transform duration-700 transform-style-preserve-3d group-hover:rotate-y-180">
            <!-- Front -->
            <div class="flip-card-front absolute inset-0 w-full h-full backface-hidden bg-gradient-to-br from-carrot-orange to-manhattan rounded-2xl shadow-xl flex flex-col items-center justify-center text-white p-6">
              <div class="absolute inset-0 bg-black/20 rounded-2xl"></div>
              <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/30 rounded-2xl flex items-center justify-center mb-4 backdrop-blur-sm">
                  <img src="/assets/icons/food.svg" alt="Alimentación" class="w-8 h-8 filter brightness-0 invert">
                </div>
                <h3 class="font-gotham-bold text-xl text-center mb-2 text-white drop-shadow-lg">Alimentación y Bebidas</h3>
                <p class="font-gotham text-sm text-center text-white/95 drop-shadow-md">Ingredientes, aditivos, conservantes, colorantes, etc.</p>
              </div>
            </div>
            <!-- Back -->
            <div class="flip-card-back absolute inset-0 w-full h-full backface-hidden rotate-y-180 bg-white rounded-2xl shadow-xl p-6 flex flex-col justify-center border border-carrot-orange/20">
              <div class="text-center mb-4">
                <div class="w-12 h-12 bg-carrot-orange rounded-xl flex items-center justify-center mx-auto mb-3">
                  <img src="/assets/icons/food.svg" alt="Alimentación" class="w-6 h-6 filter brightness-0 invert">
                </div>
                <h4 class="font-gotham-bold text-lg text-gray-900">Nuestros Clientes</h4>
              </div>
              <ul class="font-gotham text-sm text-gray-600 space-y-2 text-left">
                <li>• Procesadoras de alimentos</li>
                <li>• Bebidas y refrescos</li>
                <li>• Panificadoras</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Plásticos y Empaques -->
        <div class="flip-card group h-64 perspective-1000">
          <div class="flip-card-inner relative w-full h-full transition-transform duration-700 transform-style-preserve-3d group-hover:rotate-y-180">
            <!-- Front -->
            <div class="flip-card-front absolute inset-0 w-full h-full backface-hidden bg-gradient-to-br from-eastern-blue to-spray rounded-2xl shadow-xl flex flex-col items-center justify-center text-white p-6">
              <div class="absolute inset-0 bg-black/20 rounded-2xl"></div>
              <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/30 rounded-2xl flex items-center justify-center mb-4 backdrop-blur-sm">
                  <img src="/assets/icons/box.svg" alt="Plásticos" class="w-8 h-8 filter brightness-0 invert">
                </div>
                <h3 class="font-gotham-bold text-xl text-center mb-2 text-white drop-shadow-lg">Plásticos y Empaques</h3>
                <p class="font-gotham text-sm text-center text-white/95 drop-shadow-md">Resinas, polímeros, aditivos especiales, etc.</p>
              </div>
            </div>
            <!-- Back -->
            <div class="flip-card-back absolute inset-0 w-full h-full backface-hidden rotate-y-180 bg-white rounded-2xl shadow-xl p-6 flex flex-col justify-center border border-eastern-blue/20">
              <div class="text-center mb-4">
                <div class="w-12 h-12 bg-eastern-blue rounded-xl flex items-center justify-center mx-auto mb-3">
                  <img src="/assets/icons/box.svg" alt="Plásticos" class="w-6 h-6 filter brightness-0 invert">
                </div>
                <h4 class="font-gotham-bold text-lg text-gray-900">Nuestros Clientes</h4>
              </div>
              <ul class="font-gotham text-sm text-gray-600 space-y-2 text-left">
                <li>• Fabricantes de envases</li>
                <li>• Empresas de embalaje</li>
                <li>• Plásticos técnicos</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Industria Química -->
        <div class="flip-card group h-64 perspective-1000">
          <div class="flip-card-inner relative w-full h-full transition-transform duration-700 transform-style-preserve-3d group-hover:rotate-y-180">
            <!-- Front -->
            <div class="flip-card-front absolute inset-0 w-full h-full backface-hidden bg-gradient-to-br from-carrot-orange to-golden-glow rounded-2xl shadow-xl flex flex-col items-center justify-center text-white p-6">
              <div class="absolute inset-0 bg-black/20 rounded-2xl"></div>
              <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/30 rounded-2xl flex items-center justify-center mb-4 backdrop-blur-sm">
                  <img src="/assets/icons/chemistry.svg" alt="Química" class="w-8 h-8 filter brightness-0 invert">
                </div>
                <h3 class="font-gotham-bold text-xl text-center mb-2 text-white drop-shadow-lg">Industria Química</h3>
                <p class="font-gotham text-sm text-center text-white/95 drop-shadow-md">Solventes, parafinas, catalizadores, compuestos técnicos, etc.</p>
              </div>
            </div>
            <!-- Back -->
            <div class="flip-card-back absolute inset-0 w-full h-full backface-hidden rotate-y-180 bg-white rounded-2xl shadow-xl p-6 flex flex-col justify-center border border-carrot-orange/20">
              <div class="text-center mb-4">
                <div class="w-12 h-12 bg-carrot-orange rounded-xl flex items-center justify-center mx-auto mb-3">
                  <img src="/assets/icons/chemistry.svg" alt="Química" class="w-6 h-6 filter brightness-0 invert">
                </div>
                <h4 class="font-gotham-bold text-lg text-gray-900">Nuestros Clientes</h4>
              </div>
              <ul class="font-gotham text-sm text-gray-600 space-y-2 text-left">
                <li>• Empresas de formulación química</li>
                <li>• Limpieza industrial</li>
                <li>• Adhesivos</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Industria Maderera -->
        <div class="flip-card group h-64 perspective-1000">
          <div class="flip-card-inner relative w-full h-full transition-transform duration-700 transform-style-preserve-3d group-hover:rotate-y-180">
            <!-- Front -->
            <div class="flip-card-front absolute inset-0 w-full h-full backface-hidden bg-gradient-to-br from-sante-fe to-manhattan rounded-2xl shadow-xl flex flex-col items-center justify-center text-white p-6">
              <div class="absolute inset-0 bg-black/20 rounded-2xl"></div>
              <div class="relative z-10 flex flex-col items-center justify-center h-full">
                <div class="w-16 h-16 bg-white/30 rounded-2xl flex items-center justify-center mb-4 backdrop-blur-sm">
                  <img src="/assets/icons/wood.svg" alt="Madera" class="w-8 h-8 filter brightness-0 invert">
                </div>
                <h3 class="font-gotham-bold text-xl text-center mb-2 text-white drop-shadow-lg">Industria Maderera</h3>
                <p class="font-gotham text-sm text-center text-white/95 drop-shadow-md">Palillos, paletas, mezcladores, etc.</p>
              </div>
            </div>
            <!-- Back -->
            <div class="flip-card-back absolute inset-0 w-full h-full backface-hidden rotate-y-180 bg-white rounded-2xl shadow-xl p-6 flex flex-col justify-center border border-sante-fe/20">
              <div class="text-center mb-4">
                <div class="w-12 h-12 bg-sante-fe rounded-xl flex items-center justify-center mx-auto mb-3">
                  <img src="/assets/icons/wood.svg" alt="Madera" class="w-6 h-6 filter brightness-0 invert">
                </div>
                <h4 class="font-gotham-bold text-lg text-gray-900">Nuestros Clientes</h4>
              </div>
              <ul class="font-gotham text-sm text-gray-600 space-y-2 text-left">
                <li>• Fabricantes de utensilios desechables</li>
                <li>• Empresas de alimentos</li>
                <li>• Industrias cerilleras</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Video Section -->
      <div class="flex items-center justify-center lg:justify-end">
        <div class="relative w-full max-w-md lg:max-w-lg">
          <div class="relative bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
            <video 
              src="/assets/videos/Industrias.mp4"
              autoplay 
              muted 
              loop 
              playsinline
              preload="auto"
              class="w-full h-auto object-cover rounded-2xl"
              style="aspect-ratio: 16/9;"
            >
              Tu navegador no soporta el elemento video.
            </video>
            <div class="absolute inset-0 bg-gradient-to-t from-black/10 via-transparent to-transparent rounded-2xl pointer-events-none"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Flip Card Styles */
  .perspective-1000 {
    perspective: 1000px;
  }
  
  .transform-style-preserve-3d {
    transform-style: preserve-3d;
  }
  
  .backface-hidden {
    backface-visibility: hidden;
  }
  
  .rotate-y-180 {
    transform: rotateY(180deg);
  }
  
  .flip-card-inner {
    transition: transform 0.7s cubic-bezier(0.4, 0.2, 0.2, 1);
  }
  
  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .flip-card {
      height: 280px;
    }
  }
  
  @media (max-width: 480px) {
    .flip-card {
      height: 300px;
    }
  }
  
  /* Smooth hover effects */
  .flip-card-front,
  .flip-card-back {
    transition: all 0.3s ease;
  }
  
  .flip-card:hover .flip-card-front {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
  
  .flip-card:hover .flip-card-back {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
</style>
