// LinkedIn Floating Button Component
---

<div class="fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-40">
  <a 
    href="https://www.linkedin.com/company/intertradesolutions"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visitar nuestro perfil de LinkedIn"
    class="group flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-[#0077B5] rounded-full shadow-lg sm:shadow-2xl transition-all duration-300 transform animate-pulse active:scale-95 active:bg-[#005885] hover:bg-[#005885] hover:shadow-[#0077B5]/25 hover:scale-110 hover:animate-none"
  >
    <!-- LinkedIn Icon -->
    <svg 
      class="w-5 h-5 sm:w-7 sm:h-7 text-white transition-transform duration-300 group-hover:scale-110 group-active:scale-90" 
      fill="currentColor" 
      viewBox="0 0 24 24"
    >
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    
    <!-- Ripple effect on interaction -->
    <div class="absolute inset-0 rounded-full bg-white/20 scale-0 group-hover:scale-100 group-active:scale-100 transition-transform duration-300 opacity-0 group-hover:opacity-100 group-active:opacity-100"></div>
  </a>
  
  <!-- Tooltip - Hidden on mobile, visible on desktop -->
  <div class="hidden sm:block absolute bottom-full right-0 mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
    <div class="bg-gray-900 text-white text-sm font-gotham px-3 py-2 rounded-lg shadow-lg whitespace-nowrap">
      SÃ­guenos en LinkedIn
      <div class="absolute top-full right-4 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
    </div>
  </div>
</div>

<style>
  /* Custom pulse animation for LinkedIn button */
  @keyframes linkedinPulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(0, 119, 181, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(0, 119, 181, 0);
    }
  }
  
  .animate-pulse {
    animation: linkedinPulse 2s infinite;
  }
  
  /* Ensure tooltip appears above other elements */
  .group:hover .group-hover\:opacity-100 {
    z-index: 60;
  }
</style>
